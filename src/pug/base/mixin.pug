                .cardlist__buy-icon 
                    !=icon_search 
mixin info_detail(title,content)
    .detail__product 
        .detail__head 
            ul 
                each item in title 
                    li
                        a(href="")= item 
        .detail__content 
            each item in content 
                p= item
mixin cart(title,img,name,price)
    <table class="table table-striped">
        <thead>
            <tr>
                each item in title
                    <th scope="col">#{item}</th>
            </tr>
        </thead>
        <tbody>
            -for(let i= 0 ; i < img.length ; i++)
                <tr>
                    <th scope="row">#{i}</th>
                    td.img_table 
                        img(src= `./assets/img/${img[i]}`, alt="")
                    td.name= name[i]
                    td= price[i]
                    td= i 
                    td= price[i]*i
                    td
                        <i class="fas fa-trash-alt"></i>
                </tr>
        </tbody>
    </table>
mixin category_news(img,title)
    h1.title__category Tin nổi bật
    -for(let i=0;i< img.length;i++)
        .category__color.category__news
            .news__img 
                img(src= `./assets/img/${img[i]}`, alt="")
            h1.color__title.title__news= title[i]
mixin category_news_tags(title)
    h1.title__category Tags
    .category__color.category__news
        .row
            -for(let i=0;i< title.length;i++)
                .col-sm-6 
                    h1.news__tag= title [i]
mixin news_content(title,img,desc)
    -for(let j=0;j<4;j++)
        .news__item
            h1= title[j]
            .news__item-time
                -for(let i=0;i<icon_news.length;i++) 
                    .time_item 
                        != icon_news[i]
                        h3= time_news[i]
            .news__img 
                img(src= `./assets/img/${img[j]}`, alt="", srcset="")
            p= desc
