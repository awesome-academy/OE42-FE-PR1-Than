mixin category(title)
    h1.title__category= title[0]
    ul 
        -for(let i =1; i < title.length; i++) 
            li 
                a(href="")
                    <i class="fas fa-chevron-right"></i>
                    = title[i] 
mixin category_color(colortext,color)
    h1.title__category= colortext[0]
    -for(let i=1;i<colortext.length;i++)
        .category__color 
            .color(style={background:color[i]})
            h1.color__title= colortext[i]
mixin category_filter(title,data)
    h1 Sắp xếp theo 
    <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            Dropdown= title
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            each item in data 
                <li><a class="dropdown-item" href="#">#{item}</a></li>
        </ul>
    </div>
